<h1>Log In</h1>

<% if flash[:error_message] %>
  <h2><%= flash[:error_message] %></h2>
<% end %>

<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => 'form-control' %>
  </div>

  <%= submit_tag "Sign In" %>
<% end %>
